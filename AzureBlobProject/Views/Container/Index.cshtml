@model List<string>

<div class="border background-white p-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary"> Container List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i>Create New Container</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead class ="thead-dark">
                    <tr>
                        <th width="70%">
                            Container Name
                        </th>
                        <th width="30%"></th>
                    </tr>
                </thead>
                
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item)
                        </td>
                        <td class ="text-end">
                            <a class="btn btn-primary text-white" asp-action="Manage" asp-controller="Blob" asp-route-containerName="@item">
                                Manage
                            </a>

                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-containerName="@item">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No container exists...</p>
        }
    </div>
</div>